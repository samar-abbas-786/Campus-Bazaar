<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Show Item</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }
      nav {
        height: 60px;
        width: 100vw;
        background-color: lightcoral;
        color: white;
      }
      ul {
        height: 60px;
        width: 60vw;
        float: right;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
      }
      ul li {
        list-style: none;
      }
      ul li a {
        text-decoration: none;
        font-size: 23px;
        font-weight: bold;
        color: white;
      }
      #userList {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        padding: 20px;
      }
      .card {
        width: 400px;
        height: 200px;
        border: 3px solid red;
        margin: 10px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
      }
      .card div {
        margin-bottom: 10px;
      }
      button {
        height: 30px;
        width: 130px;
        background-color: black;
        color: white;
        font-size: 14px;
        font-family: sans-serif;
        font-weight: bold;
        padding: 3px;
        border-radius: 10px;
      }
      nav {
        display: flex;
        justify-content: space-between;
      }
      nav h1 {
        color: darkgray;
        background-color: rgb(0, 0, 0);
        padding: 10px;
        border: 1px solid white;
      }
    </style>
  </head>
  <body>
    <nav>
      <h1><i>SELL & GET</i></h1>
      <ul>
        <form action="">
          <li>
            <a href="#"><button type="submit">HOME</button></a>
          </li>
        </form>
        <form action="/button" method="post">
          <li>
            <a href="home.html"><button type="submit">ADD PRODUCT</button></a>
          </li>
        </form>
        <form action="/sign" method="post">
          <li>
            <a href="#"><button type="submit">SIGNUP</button></a>
          </li>
        </form>
      </ul>
    </nav>
    <div id="userList"></div>
    <script>
      fetch("/api/user")
        .then((response) => {
          if (!response.ok) {
            throw new Error("Network response was not ok");
          }
          return response.json();
        })
        .then((data) => {
          const listItemDiv = document.getElementById("userList");
          data.forEach((user) => {
            const card = document.createElement("div");
            card.classList.add("card");

            const name = document.createElement("div");
            name.textContent = `Product Name :  ${user.Name}`;

            const price = document.createElement("div");
            price.textContent = `Price: ${user.Price}`;

            const contact = document.createElement("div");
            contact.textContent = `Contact: ${user.Contact_NO}`;

            const address = document.createElement("div");
            address.textContent = `Address: ${user.ADDRESS}`;

            card.appendChild(name);
            card.appendChild(price);
            card.appendChild(contact);
            card.appendChild(address);

            listItemDiv.appendChild(card);
          });
        })
        .catch((error) => {
          console.error("Error fetching user data:", error);
        });
    </script>
  </body>
</html>
