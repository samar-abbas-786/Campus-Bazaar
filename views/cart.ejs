<%- include('nav.ejs') %>
<link rel="stylesheet" href="style.css" />
<link rel="stylesheet" href="cart.css" />
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .top {
    display: flex;
    justify-content: space-around;
  }
  .all {
    width: 60vw;
    display: flex;
    flex-direction: column;
    padding-top: 1rem;
  }
  .single_product {
    display: flex;
    height: 300px;
    justify-content: space-evenly;
    align-items: center;
    /* border: 2px solid black; */
    background-color: rgb(218, 195, 240);
    border-radius: 12px;
  }
  .product_image img {
    height: 200px;
    width: 300px;
  }
  .product_details {
    width: 40%;
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    /* border: 1px solid red; */
    align-items: center;
  }
  .product_details h1 {
    font-size: 50px;
    font-family: sans-serif;
  }
  .product_details p {
    font-size: 45px;
    font-family: sans-serif;
  }
  .btns {
    display: flex;
    width: 100%;
    justify-content: space-evenly;
  }
  .btns button {
    height: 45px;
    width: 120px;
    font-size: 28px;
    font-family: Arial, Helvetica, sans-serif;
    border-radius: 6px;
    border: none;
    font-weight: 540;
  }
  button a {
    text-decoration: none;
    color: white;
  }
  #btn1 {
    background-color: red;
  }
  #btn2 {
    background-color: yellowgreen;
    color: white;
  }
  .btns button:hover {
    scale: 1.05;
    transition: 0.3s;
  }
  .top_total {
    width: 30vw;
    width: auto;
    display: flex;
    height: 100vh;
    align-items: center;
    border-radius: 10px;
  }
  .total {
    height: 500px;
    width: 450px;
    background-color: rgb(0, 0, 0);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
  }
</style>
<body>
  <div class="top">
    <% array.forEach(element => { %>

    <div class="all">
      <div class="single_product">
        <div class="product_image">
          <img
            id="image"
            src="https://res.cloudinary.com/dkwmmww8q/image/upload/<%= element.productImage.public_id %>"
            alt="<%= element.Name %>"
          />
        </div>
        <div class="product_details">
          <h1><%= element.Name %></h1>
          <p>₹<%= element.Price %></p>
          <div class="btns">
            <button id="btn1"><a href="">remove</a></button>
            <button id="btn2">details</button>
          </div>
        </div>
      </div>
    </div>
    <% }) %>

